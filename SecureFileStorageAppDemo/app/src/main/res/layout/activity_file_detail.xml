<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">


    <TextView
        android:id="@+id/fileNameDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/file_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ImageView: visible only for image files -->
    <ImageView
        android:id="@+id/fileImagePreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:contentDescription="@string/file_preview"
        app:layout_constraintTop_toBottomOf="@id/fileNameDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- TextView: visible only for non-image files -->
    <TextView
        android:id="@+id/fileContentDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:textSize="16sp"
        android:textColor="#000"
        android:background="#f0f0f0"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/fileNameDetail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
